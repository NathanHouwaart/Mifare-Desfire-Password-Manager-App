{
  "name": "securepass",
  "description": "NFC-backed password manager",
  "private": true,
  "version": "1.0.0",
  "author": "Nathan Houwaart n.m.houwaart@hva.nl",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel --race dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
    "lint": "eslint .",
    "build": "tsc && vite build",
    "build:addon": "cmake-js compile",
    "build:addon:rebuild": "cmake-js rebuild",
    "test": "vitest run",
    "test:watch": "vitest",
    "preview": "vite preview",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "dist:mac": "npm run transpile:electron && npm run build && electron-builder --mac --arm64",
    "build:host": "npx @yao-pkg/pkg native-host/host.js --target node18-win-x64 --output native-host/host.exe",
    "download:cp210x": "node scripts/download-cp210x.js",
    "dist:win": "npm run download:cp210x && npm run build:host && npm run transpile:electron && npm run build && electron-builder --win --x64",
    "dist:linux": "npm run transpile:electron && npm run build && electron-builder --linux --x64",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "binary": {
    "napi_version": [
      9
    ]
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "@types/better-sqlite3": "^7.6.13",
    "@types/qrcode": "^1.5.6",
    "better-sqlite3": "^12.6.2",
    "cmake-js": "^7.3.1",
    "lucide-react": "^0.575.0",
    "node-addon-api": "^8.5.0",
    "qrcode": "^1.5.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.4",
    "serialport": "^13.0.0",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^20.5.6",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "@yao-pkg/pkg": "^5.16.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "node-gyp": "^11.4.2",
    "npm-run-all": "^4.1.5",
    "rcedit": "^5.0.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.securepass.app",
    "afterPack": "scripts/afterPack.js",
    "icon": "assets/favicon.ico",
    "files": [
      "dist-electron/**",
      "dist-react/**",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "packaging/linux/udev/99-nfc-serial.rules",
        "to": "udev/99-nfc-serial.rules"
      },
      {
        "from": "packaging/linux/udev/install-udev.sh",
        "to": "udev/install-udev.sh"
      },
      {
        "from": "dist-electron/preload.cjs",
        "to": "dist-electron/preload.cjs"
      },
      {
        "from": "assets/favicon.ico",
        "to": "assets/favicon.ico"
      },
      {
        "from": "assets/favicon.png",
        "to": "assets/favicon.png"
      },
      {
        "from": "build/Release/myaddon.node",
        "to": "build/Release/myaddon.node"
      },
      {
        "from": "native-host",
        "to": "native-host"
      },
      {
        "from": "extension",
        "to": "extension"
      }
    ],
    "protocols": [
      {
        "name": "SecurePass Invite Links",
        "schemes": [
          "securepass"
        ]
      }
    ],
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Utility",
      "icon": "assets/favicon.png"
    },
    "win": {
      "target": "nsis",
      "artifactName": "SecurePass-Setup-${version}.exe",
      "signExts": [],
      "signAndEditExecutable": false
    },
    "deb": {
      "maintainer": "Nathan Houwaart n.m.houwaart@hva.nl",
      "afterInstall": "packaging/linux/debian/postinst"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SecurePass"
    }
  }
}
