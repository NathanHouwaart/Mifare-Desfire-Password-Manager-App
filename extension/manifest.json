{
  "manifest_version": 3,
  "name": "SecurePass",
  "version": "0.1.0",
  "description": "NFC-backed password autofill powered by SecurePass",

  "permissions": [
    "nativeMessaging",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "SecurePass"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js":      ["content.js"],
      "run_at":  "document_idle",
      "all_frames": true
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "securepass@localhost",
      "strict_min_version": "109.0"
    }
  }
}
